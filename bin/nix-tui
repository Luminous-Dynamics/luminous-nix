#!/usr/bin/env -S poetry run python
"""Entry point for nix-tui command."""

import os
import sys

# Fix for Kitty terminal compatibility
if 'kitty' in os.environ.get('TERM', '').lower():
    # Set TERM to xterm-256color for better compatibility
    os.environ['TERM'] = 'xterm-256color'
    # Ensure proper terminal settings for Textual
    os.environ['TEXTUAL_ALLOW_SCREENSAVER'] = '0'

from luminous_nix.interfaces.tui import main

if __name__ == '__main__':
    main()
