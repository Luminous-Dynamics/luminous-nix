#!/usr/bin/env python3
"""
Launch the Nix for Humanity Terminal User Interface.

Beautiful, interactive terminal interface for natural language NixOS management.

Since: v1.0.0
"""

import sys
import os
from pathlib import Path

# Add project root to path
project_root = Path(__file__).parent.parent
sys.path.insert(0, str(project_root / "src"))

def main():
    """Main entry point for TUI."""
    try:
        from nix_for_humanity.tui import run_tui
        
        print("üåü Starting Nix for Humanity TUI...")
        print("Press Ctrl+/ for help, Ctrl+C to quit\n")
        
        run_tui()
        
    except ImportError as e:
        print(f"‚ùå Error: Missing dependencies - {e}")
        print("\nPlease install textual:")
        print("  pip install textual")
        sys.exit(1)
    except KeyboardInterrupt:
        print("\n\n‚ú® Thank you for using Nix for Humanity!")
        sys.exit(0)
    except Exception as e:
        print(f"‚ùå Error: {e}")
        sys.exit(1)


if __name__ == "__main__":
    main()