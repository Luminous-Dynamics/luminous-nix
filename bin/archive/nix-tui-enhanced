#!/usr/bin/env python3
"""
üåü Launch the Enhanced Nix for Humanity TUI

Features advanced error handling, recovery options, and error history.
"""

import os
import sys
from pathlib import Path

# Add the project root to Python path
project_root = Path(__file__).parent.parent
sys.path.insert(0, str(project_root))

# Import and run the enhanced TUI
try:
    from nix_for_humanity.ui.enhanced_tui import main

    print("üåü Launching Enhanced Nix for Humanity TUI...")
    print("‚ú® Features: Advanced error handling, recovery options, error history")
    print("\nKeyboard shortcuts:")
    print("  Ctrl+E - Toggle error history panel")
    print("  Ctrl+R - Execute recovery plan")
    print("  Ctrl+D - Toggle debug mode (verbose errors)")
    print("  Ctrl+Z - Toggle zen mode")
    print("  F1     - Help")
    print("  Ctrl+C - Quit\n")

    main()

except ImportError as e:
    print(f"‚ùå Error: Could not import enhanced TUI components: {e}")
    print("\nPlease ensure you're in the development environment:")
    print("  nix develop")
    sys.exit(1)
except KeyboardInterrupt:
    print("\n‚ú® Thank you for using Nix for Humanity!")
    print("üåä We flow with gratitude.")
    sys.exit(0)
except Exception as e:
    print(f"‚ùå Unexpected error: {e}")
    print("\nFor help, please run:")
    print("  ./bin/nix-tui --help")
    sys.exit(1)
