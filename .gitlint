# Gitlint configuration for commit message standards

[general]
# Ignore certain rules
ignore=body-is-missing,body-min-length

# Set line length limits
line-length=72
contrib=contrib-title-conventional-commits

[title-max-length]
line-length=72

[title-min-length]
min-length=10

[title-must-not-contain-word]
# Disallow WIP commits in main branch
words=WIP,TODO,FIXME

[body-max-line-length]
line-length=80

# Enable conventional commits
[contrib-title-conventional-commits]
# Types allowed in commit messages
types=feat,fix,docs,style,refactor,perf,test,build,ci,chore,revert