{
  "name": "@luminous-nix/setup-ceremony",
  "version": "1.0.0",
  "description": "Modular TypeScript components for NixOS setup ceremony",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist/",
    "styles/"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:bundle",
    "build:ts": "tsc",
    "build:bundle": "rollup -c",
    "watch": "tsc --watch",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,css}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nixos",
    "setup",
    "gui",
    "typescript",
    "modular",
    "components"
  ],
  "author": "Luminous Dynamics",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luminous-Dynamics/luminous-nix.git"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rollup": "^4.9.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}