{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "NixOS GUI",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "nix",
            "cmd": "nix",
            "args": true
          },
          {
            "name": "nixos-rebuild",
            "cmd": "nixos-rebuild",
            "args": ["switch", "boot", "test", "dry-build", "--show-trace"]
          },
          {
            "name": "systemctl",
            "cmd": "systemctl",
            "args": ["status", "start", "stop", "restart", "enable", "disable", "list-units"]
          },
          {
            "name": "nix-env",
            "cmd": "nix-env",
            "args": true
          },
          {
            "name": "nix-channel",
            "cmd": "nix-channel",
            "args": true
          }
        ]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeFile": false,
        "removeDir": false,
        "scope": [
          "$CONFIG/nixos-gui/**",
          "/etc/nixos/**",
          "/tmp/nixos-gui-**"
        ]
      },
      "path": {
        "all": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["http://localhost:*", "https://localhost:*", "https://cache.nixos.org/**"]
      },
      "notification": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "clipboard": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.nixos.gui",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "SystemConfiguration",
      "shortDescription": "Consciousness-first NixOS configuration manager",
      "longDescription": "A sacred space for managing your NixOS system with mindfulness and intention. Features sacred pauses, coherence tracking, and protection for your attention.",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "copyright": "Â© 2025 Luminous Dynamics",
      "license": "MIT",
      "linux": {
        "deb": {
          "depends": ["webkit2gtk-4.0", "libgtk-3-0", "libayatana-appindicator3-1"]
        }
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "resources": [],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' http://localhost:* https://localhost:* ws://localhost:* wss://localhost:*; media-src 'self'; object-src 'none'; frame-src 'none';",
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": true
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Luminous-Dynamics/nixos-gui/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    },
    "windows": [
      {
        "title": "NixOS Configuration Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "focus": true,
        "transparent": false,
        "skipTaskbar": false,
        "decorations": true,
        "alwaysOnTop": false,
        "contentProtected": false,
        "visibleOnAllWorkspaces": false,
        "theme": "Dark",
        "titleBarStyle": "Overlay",
        "hiddenTitle": false,
        "acceptFirstMouse": false,
        "tabbingIdentifier": "nixos-gui",
        "additionalBrowserArgs": ""
      }
    ]
  }
}