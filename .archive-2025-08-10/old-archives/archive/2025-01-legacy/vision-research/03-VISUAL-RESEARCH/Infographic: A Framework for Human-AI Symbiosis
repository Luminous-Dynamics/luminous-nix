    <script>
        const wrapLabel = (str, maxWidth) => {
            if (str.length <= maxWidth) {
                return str;
            }
            const words = str.split(' ');
            let lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + word).length > maxWidth) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            });
            lines.push(currentLine.trim());
            return lines;
        };

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
              return label.join(' ');
            } else {
              return label;
            }
        };

        const palette = {
            blue: '#00A6ED',
            green: '#7FB800',
            gold: '#FFB400',
            orange: '#F6511D',
            dark: '#2F2F2F',
            light: '#F5F5F5'
        };

        const defaultChartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: palette.dark,
                        font: {
                            family: "'Inter', sans-serif"
                        }
                    }
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    }
                }
            },
            scales: {
                r: {
                    angleLines: { color: 'rgba(47, 47, 47, 0.2)' },
                    grid: { color: 'rgba(47, 47, 47, 0.2)' },
                    pointLabels: {
                        color: palette.dark,
                        font: { size: 12, family: "'Inter', sans-serif" }
                    },
                    ticks: {
                        color: palette.dark,
                        backdropColor: 'rgba(255, 255, 255, 0.75)'
                    }
                },
                x: {
                    grid: { display: false },
                    ticks: {
                        color: palette.dark,
                        font: { family: "'Inter', sans-serif" }
                    }
                },
                y: {
                    grid: { color: 'rgba(47, 47, 47, 0.1)' },
                    ticks: {
                        color: palette.dark,
                        font: { family: "'Inter', sans-serif" }
                    },
                    beginAtZero: true
                }
            }
        };

        const trustCtx = document.getElementById('trustChart').getContext('2d');
        new Chart(trustCtx, {
            type: 'radar',
            data: {
                labels: ['Transparency', 'Accuracy', 'Reliability', 'Fairness', 'Explainability'],
                datasets: [{
                    label: 'Human-AI Partnership Trust Score',
                    data: [85, 92, 88, 80, 75],
                    backgroundColor: 'rgba(0, 166, 237, 0.2)',
                    borderColor: palette.blue,
                    pointBackgroundColor: palette.blue,
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: palette.blue
                }]
            },
            options: defaultChartOptions
        });

        const performanceCtx = document.getElementById('performanceChart').getContext('2d');
        const performanceLabels = ['Productivity', 'Accuracy', 'Creativity Score', 'Task Completion Time'];
        new Chart(performanceCtx, {
            type: 'bar',
            data: {
                labels: performanceLabels.map(label => wrapLabel(label, 16)),
                datasets: [
                    {
                        label: 'Human-Only',
                        data: [65, 78, 70, 85],
                        backgroundColor: palette.gold,
                        borderColor: palette.gold,
                        borderWidth: 1
                    },
                    {
                        label: 'Human-AI Team',
                        data: [90, 95, 88, 60],
                        backgroundColor: palette.green,
                        borderColor: palette.green,
                        borderWidth: 1
                    }
                ]
            },
            options: { ...defaultChartOptions, indexAxis: 'y' }
        });

        const flourishingCtx = document.getElementById('flourishingChart').getContext('2d');
        const flourishingLabels = ['Meaning & Purpose', 'Mental & Physical Health', 'Close Social Relationships', 'Life Satisfaction'];
        new Chart(flourishingCtx, {
            type: 'doughnut',
            data: {
                labels: flourishingLabels.map(label => wrapLabel(label, 16)),
                datasets: [{
                    label: 'Contribution to Human Flourishing',
                    data: [35, 25, 20, 20],
                    backgroundColor: [palette.blue, palette.green, palette.gold, palette.orange],
                    hoverOffset: 4
                }]
            },
            options: defaultChartOptions
        });

        const correlationCtx = document.getElementById('correlationChart').getContext('2d');
        new Chart(correlationCtx, {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'Human-AI Team Performance vs. Trust',
                    data: [
                        {x: 60, y: 65}, {x: 62, y: 68}, {x: 68, y: 72}, {x: 70, y: 75},
                        {x: 75, y: 78}, {x: 78, y: 82}, {x: 80, y: 85}, {x: 85, y: 88},
                        {x: 88, y: 90}, {x: 90, y: 94}, {x: 95, y: 98}
                    ],
                    backgroundColor: palette.orange,
                }]
            },
            options: {
                ...defaultChartOptions,
                scales: {
                    x: {
                        ...defaultChartOptions.scales.x,
                        title: {
                            display: true,
                            text: 'Trust Score (%)',
                            color: palette.dark
                        }
                    },
                    y: {
                        ...defaultChartOptions.scales.y,
                        title: {
                            display: true,
                            text: 'Performance Score (%)',
                            color: palette.dark
                        }
                    }
                }
            }
        });

    </script>
</body>
