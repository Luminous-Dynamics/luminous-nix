{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@nix-humanity/core": ["packages/core/src/index.ts"],
      "@nix-humanity/patterns": ["packages/patterns/src/index.ts"],
      "@nix-humanity/nlp": ["packages/nlp/src/index.ts"],
      "@nix-humanity/executor": ["packages/executor/src/index.ts"],
      "@nix-humanity/learning": ["packages/learning/src/index.ts"],
      "@nix-humanity/personality": ["packages/personality/src/index.ts"],
      "@nix-humanity/ui": ["packages/ui/src/index.ts"]
    }
  }
}
